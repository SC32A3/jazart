<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="global.sesoc.jazart.dao.UserMapper">
   <insert id="insert" parameterType="User">
      insert into userinfo values(#{user_id}, #{user_pw}, #{user_picture}, #{user_nickname}, #{user_phone}, #{user_email}, #{user_desc})
   </insert>
   <select id="selectUser" resultType="User" parameterType="String">
      select * from userinfo where user_id = #{userid} 
   </select>
   <select id="list" resultType="User">
      select *
      from p_user 
   </select>
   <select id="countId" resultType="int" parameterType="String">
      select count(user_id) from userinfo where user_id = #{user_id}
   </select>
   <select id="countNickname" resultType="int" parameterType="String">
      select count(user_nickname) from userinfo where user_nickname = #{user_nickname}
   </select>
   <select id="countEmail" resultType="int" parameterType="String">
      select count(user_email) from userinfo where user_email = #{user_email}
   </select>
   <select id="songsByArtist" resultType="Songinfo" parameterType="String">
      select * from songinfo where song_nickname = #{loginNickname}
   </select>
</mapper>