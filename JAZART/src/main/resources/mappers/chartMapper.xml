<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="global.sesoc.jazart.dao.ChartMapper">


   <select id="chartList" resultType="Songinfo">
      select
         boardNum      
         ,board_tag            
         ,board_nickname
         ,board_title
         ,board_content         
         ,to_char(board_inputdate, 'yyyy-mm-dd') board_inputdate      
         ,board_hits         
      from
         board   
      order by
         boardnum desc
   </select>

  
</mapper>   